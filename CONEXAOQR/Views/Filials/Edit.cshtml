@model CONEXAOQR.Models.Filial

@{
    ViewBag.Title = "Edit";
     Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

    <style type="text/css">

        .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
            padding: 12px 8px;
            vertical-align: middle;
            border-color: white !important;
        }

    .btn.btn-primary {
        color: black !important;
        background-color: #fff !important;
    }
    </style>


    <div class="content">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">

                            <div class="card-header card-header-info">
                                <h4 class="card-title"><i class="material-icons">table</i> Alterar Filial</h4>
                                <p class="card-category">Dados cadastrais</p>
                            </div>
                            <div class="card-body table-responsive">
                                <br />
                                <div>
                                    <table class="table">
                                        <tr class="m-0 font-weight-bold">
                                            <td>
                                                Nome Filial: &nbsp;&nbsp;@Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                                            </td>
                                            <td>
                                                Empresa:&nbsp;&nbsp;
                                                @Html.DropDownList("EmpresaId", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.EmpresaId, "", new { @class = "text-danger" })
                                            </td>
                                        </tr>
                                        <tr class="m-0 font-weight-bold">
                                            <td>
                                                Gerente: &nbsp;&nbsp;   @Html.EditorFor(model => model.gerente, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.gerente, "", new { @class = "text-danger" })
                                            </td>
                                            <td>
                                                Telefone:&nbsp;&nbsp;
                                                @Html.EditorFor(model => model.telefone, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.telefone, "", new { @class = "text-danger" })
                                        </tr>
                                        <tr class="m-0 font-weight-bold">
                                            <td>
                                                Endereço: &nbsp;&nbsp;
                                                @Html.EditorFor(model => model.endereco, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.endereco, "", new { @class = "text-danger" })

                                            </td>
                                            <td>
                                                E-mail: &nbsp;&nbsp;
                                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                            </td>
                                        </tr>
                                        <tr class="m-0 font-weight-bold">
                                            <td>
                                                MQL - POSSUI PRÉ-ATENDIMENTO?&nbsp;&nbsp;
                                                <select id="mqi" name="mqi" class="btn btn-primary dropdown-toggle">
                                                    <option value="">Nenhuma</option>
                                                    <option value="SIM">SIM </option>
                                                    <option value="2NÃO">NÃO</option>
                                                </select>
                                                @Html.ValidationMessageFor(model => model.mqi, "", new { @class = "text-danger" })

                                            </td>
                                            <td>
                                                Qual o CRM que utiliza:&nbsp;&nbsp;
                                                @Html.EditorFor(model => model.crm, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.crm, "", new { @class = "text-danger" })

                                            </td>
                                        </tr>
                                        <tr class="m-0 font-weight-bold">
                                            <td>
                                                Site da Empresa:&nbsp;&nbsp;
                                                @Html.EditorFor(model => model.site, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.site, "", new { @class = "text-danger" })

                                            </td>

                                        </tr>
                                        <tr class="m-0 font-weight-bold">
                                            <td>
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Salvar" class="btn btn-round btn-fill btn-info" />

                                                    <a href="/Filials/Index" class="btn btn-round btn-fill btn-default">
                                                        <span class="text">Voltar</span>
                                                    </a>
                                                </div>

                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
